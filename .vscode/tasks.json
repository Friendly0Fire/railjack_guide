{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "group": "build",
            "command": "hugo server --buildDrafts --disableFastRender",
            "problemMatcher": [],
            "label": "Serve draft site"
        },
        {
            "type": "hugo",
            "task": "",
            "group": "build",
            "problemMatcher": [],
            "label": "hugo: build"
        },
        {
            "label": "Deploy",
            "type": "shell",
            "group": "build",
            "options": {
                "shell": {
                    "executable": "bash.exe",
                    "args": [
                        "-i",
                        "-c"
                    ]
                }
            },
            "dependsOn": ["hugo: build"],
            "command": "rsync -avz -e 'ssh -p ${env:HUGO_SYNC_PORT}' --progress --delete public/ ${env:HUGO_SYNC_URL}",
            "problemMatcher": []
        }
    ]
}